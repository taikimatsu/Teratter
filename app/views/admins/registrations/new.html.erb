<div style="background-image:url(<%= asset_path "log_in.jpg" %>)" , class="back" >
<div class="container">
  <div class="row">
    <div class="col-xs-4">
    <br><h1 style="text-align: center; color: white;">Sign up</h1><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="field" style="text-align: center;"><br>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
      </div>

      <div class="field" style="text-align: center;"><br>
        <%= f.password_field :password, placeholder: "パスワード" %>
      </div>

      <div class="field" style="text-align: center;"><br>
        <%= f.password_field :password_confirmation,placeholder: "パスワード確認" %>
      </div>

      <div class="actions" style="text-align: center;"><br>
        <%= f.submit "新規登録", class: "btn btn-info col-md-10 col-md-offset-1" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>


<div style="background-image:url(<%= asset_path "log_in.jpg" %>)" , class="back" >
<div class="container" , style="margin-top: 100px;">
  <div class="row">
    <div class="col-xs-4" style="margin-left: 400px; margin-top: 50px;">
    <br><h1 style="text-align: center; color: white;">Log in</h1><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field" style="text-align: center;"><br>
        <h3 style="color: white;">メールアドレス</h2><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field" style="text-align: center;"><br>
        <h3 style="color: white;">パスワード</h2><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="text-align: center; color: white;">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions" style="text-align: center; color: white;"><br>
        <%= f.submit "Log in", class: "btn btn-info col-md-10 col-md-offset-1" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>

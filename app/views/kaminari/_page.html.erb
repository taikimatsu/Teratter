<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link',:style => "background-color:yellowgreen;color:black;border:solid 1px yellowgreen;" %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link',:style => "color:black;" %>
  </li>
<% end %>

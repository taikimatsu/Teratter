<div class="templeheader" style="background-color: moccasin; width: 100%; margin: 0 auto; margin-bottom: 5px;">
    <ul class="nav nav-pills justify-content-center" >
      <li class="nav-item">
        <%= link_to  user_temples_path, class: "nav-link" do %>
          <i class="fas fa-torii-gate"><span style="margin-left: 5px;">寺・神社</span></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to  user_memorys_path, class: "nav-link active" do %>
          <i class="fas fa-feather-alt"><span style="margin-left: 5px;">参拝記録</span></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to  user_questions_path, class: "nav-link" do %>
          <i class="fas fa-question-circle"><span style="margin-left: 5px;">質問</span></i>
        <% end %>
      </li>
    </ul>
</div>

<div style="text-align: center; margin-top: 140px;">
	<h1 style="border-bottom: solid 3px #8b0000; width: 450px; margin: 20px auto;"><%= @temple.name %>・新規投稿</h1>


		<%= form_for(@memory, :url => {:controller => :memorys, :action => :create}) do |f| %>


			<div style="margin: 20px auto; width: 400px;">
				<h3>訪問日時</h3>
				<%= f.date_select :visit_date %>
			</div>

			<div style="margin: 20px auto; width: 400px;">
				<h3>写真</h3>
				<%= f.attachment_field :memory_images_images, multiple: true %>
			</div>

			<div style="margin: 20px auto; width: 400px;">
				<h3>タイトル</h3>
				<%= f.text_field :title,:class => "form-control",style: "width:400px; height:30px;" %>
			</div>
			<div style="margin: 20px auto; width: 400px;">
				<h3>感想</h3>
				<%= f.text_area :body,:class => "form-control",style: "width:400px; height:200px;" %>
			</div>

			<div style="margin: 20px auto; width: 400px;">
				<%= f.submit '新規追加',:style => "background-color:yellowgreen;" %>
			</div>

		<% end %>
</div>

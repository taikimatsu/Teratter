<div class="templeheader" style="background-color: moccasin; width: 100%; margin: 0 auto; margin-bottom: 5px;">
    <ul class="nav nav-pills justify-content-center" >
      <li class="nav-item">
        <%= link_to  user_temples_path, class: "nav-link" do %>
          <i class="fas fa-torii-gate"><span style="margin-left: 5px;">寺・神社</span></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to  user_memorys_path, class: "nav-link" do %>
          <i class="fas fa-feather-alt"><span style="margin-left: 5px;">参拝記録</span></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to  user_questions_path, class: "nav-link" do %>
          <i class="fas fa-question-circle"><span style="margin-left: 5px;">質問</span></i>
        <% end %>
      </li>
    </ul>
</div>

<div class="row" style="margin-top: 140px;">
  <div class="col-lg-7" style="margin: 0 auto; text-align: center;">

    <h2 style="border-bottom: solid 2px #8b0000"> ユーザー情報の編集</h2>

    <%= form_for(@user, :url => {:controller => :users, :action => :update}) do |f| %>

      <div style="margin-top: 30px;">
        <h3>ユーザー名</h3>
        <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名" %>
      </div>

      <div style="margin-top: 30px;">
        <h3>写真</h3>
        <%= f.attachment_field :profile_image %>
      </div>

      <div style="margin-top: 30px;">
        <h3>メールアドレス</h3>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
      </div>

      <div style="margin-top: 30px;">
        <h3>年齢</h3>
        <%= f.select :age, User.ages.keys, {},  :prompt => "選択してください" %>
      </div>

      <div style="margin-top: 30px;">
        <h3>性別</h3>
        <%= f.select :gender, User.genders.keys, {}, :prompt => "選択してください" %>
      </div>

      <div style="margin-top: 40px;">
        <%= f.submit '変更' ,:style => "background-color:yellowgreen;" %>
      </div>

    <% end %>

  </div>
</div>

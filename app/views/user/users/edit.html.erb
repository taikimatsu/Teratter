<div class="container" style="margin-top: 140px; text-align: center;">
	<div class="row">
		<div class="col-md-6 col-md-offset-3" style="text-align: center;">
			<h2>ユーザー情報の変更</h2>
			<div class="form-horizontal" role="form">
				<%= form_for(@user, :url => {:controller => :users, :action => :update}) do |f| %>

				<div>
              	<%= f.attachment_field :profile_image %>
              	</div>


              	<div class="row" style="text-align: center;">
      				<div class="field col-xs-6">
        				<%= f.text_field :name, autofocus: true, placeholder: "姓" %>
      				</div>
    			</div>

      			<div class="field" style="text-align: center;"><br>
        			<p style="color: white;">
          				年齢：<%= f.select :age, User.ages.keys, {},  :prompt => "選択してください" %>
        			</p>
      			</div>

      			<div class="field" style="text-align: center;">
        			<p style="color: white;">
          				性別：<%= f.select :gender, User.genders.keys, {}, :prompt => "選択してください" %>
        			</p>
      			</div>

      			<div class="field" style="text-align: center;"><br>
        			<%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
      			</div>

      			<div class="actions" style="text-align: center;"><br>
        			<%= f.submit "変更", class: "btn btn-info col-md-10 col-md-offset-1" %>
      			</div>
    			<% end %>

    		</div>
  		</div>
	</div>
</div>

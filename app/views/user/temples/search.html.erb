<div class="templeheader" style="background-color: moccasin; width: 100%; margin: 0 auto; margin-bottom: 5px;">
    <ul class="nav nav-pills justify-content-center" >
      <li class="nav-item">
        <%= link_to  user_temples_path, class: "nav-link active" do %>
          <i class="fas fa-torii-gate"><span style="margin-left: 5px;">寺・神社</span></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to  user_memorys_path, class: "nav-link" do %>
          <i class="fas fa-feather-alt"><span style="margin-left: 5px;">参拝記録</span></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to  user_questions_path, class: "nav-link" do %>
          <i class="fas fa-question-circle"><span style="margin-left: 5px;">質問</span></i>
        <% end %>
      </li>
    </ul>
</div>

<h1 style="margin-top : 140px; margin-left: 170px;">検索結果</h1>

<div>
<% if @temples.nil? %>
  <div class="row">
    <div class="col-lg-7" style="margin: 100px auto; font-size: 20px;">
      条件に一致するものがありません。<br>
      追加して欲しい寺や神社がございましたら右下の問い合わせボタンよりお問い合わせください。
    </div>
  </div>
<% else %>
  <% @temples.each do |temple| %>
    <div class="temples">
      <%= link_to user_temple_path(temple)  do %>
        <%= attachment_image_tag temple, :mainimage, :fill, 350, 270, format: 'jpeg', fallback: "no_image.jpg",class: "temples-image" %>
          <p><%= temple.name %></p>
          <h4>(<%= temple.prefecture.name %>)</h4>
          <% end %>
    </div>
  <% end %>
  <%= paginate @temples %>
<% end %>
</div>

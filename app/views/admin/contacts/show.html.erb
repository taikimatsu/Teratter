<div style="margin: 0 auto; text-align: center; margin-top: 140px;">
	<h1>お問い合わせ確認</h1>
</div>

<%= form_for(@contact, :url => {:controller => :contacts, :action => :update}) do |f| %>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<% if @contact.errors.any? %>
					<div id="error_explanation" style="color: red;">
						<h3> <%= @contact.errors.count %>件のエラーが発生しました。</h3>
						<ul>
							<% @contact.errors.full_messages.each do |message| %>
								<li> <%= message %> </li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<div>
					<h2> 名前</h2>
					<p style="font-size: 25px;"><%= @contact.user.name %></p>
				</div>
				<div>
					<h2> メールアドレス</h2>
					<div style="font-size: 25px;"><%= @contact.user.email %></div>
				</div>
				<div>
					<h2> 問い合わせ内容</h2>
					<div style="border: solid 1px;"><%= @contact.contact %></div>
				</div>
				<div>
					<h2> 問い合わせへの返信</h2>
					<%= f.text_area :reply, size: "20*10", class: "form-control" %>
				</div>
			</div>
		</div>
	</div>
	<div style="margin: 10px auto; text-align: center;">
		<%= f.submit 'メール送信'  %>
	</div>
<% end %>